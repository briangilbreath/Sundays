<!DOCTYPE html>
<html>
<head>
  <title>Sundays</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>



<div class="container-fluid">

<div class="row-fluid">
    <% if flash[:notice] %>
      <p class="span8 offset2 btn btn-success notice"><%= flash[:notice] %></p>
    <% end %>
    <% if flash[:error] %>
      <p class="span8 offset2 btn btn-danger error"><%= flash[:error] %></p>
    <% end %>
</div>

<div class="row-fluid">

	<div class="span8 offset2">



		<div class="navbar">
		  <div class="navbar-inner">
		    <a class="brand" href="<%= root_path %>">Sundays...</a>
		    

				<% if user_signed_in? %>

				<ul class="nav">
						 <li> <%= link_to "Private", private_path %></li>
					
				</ul>
						<div class="btn-group pull-right">
						  <a class="btn btn-primary" href="#"><i class="icon-user icon-white"></i> Logged in as <%= current_user.username %>.</a>
						  <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
						  <ul class="dropdown-menu">
						    <li><%= link_to raw('<i class="icon-pencil"></i> Edit'), edit_user_registration_path %></li>
						    <li><%= link_to raw('<i class="icon-trash"></i>  Logout'), destroy_user_session_path, method: :delete %></li>
						   
						  </ul>
						</div>
				<% else %>
					<ul class="nav">
						 <li> <%= link_to "Sign up", new_user_registration_path %></li>
						 <li> <%= link_to "Login", new_user_session_path %></li>
					 </ul>
				<% end %>


		    
		  </div>
		</div>

			<%= yield %>

	</div>

</div>
</div>
</body>
</html>
